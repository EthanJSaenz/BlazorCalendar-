@page "/authentication/{action}"
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
<RemoteAuthenticatorView Action="@Action" />

@code{
    [Parameter] public string Action { get; set; } = "default"; // Provide a default value

    protected override void OnInitialized()
    {
        // Optionally handle cases where Action might be null or empty.
        if (string.IsNullOrEmpty(Action))
        {
            Action = "default"; // Fallback if the URL doesn't include a valid action
        }
    }
}